{
  "schema_version": 2,
  "skill_id": "research-pilot",
  "skill_version": "1.0.0",
  "tier": 1,
  "tier_description": "Orchestrator - Product Discovery パイプライン (feature-pilot 前段)",
  "enforced_protocol": {
    "version": "2.0",
    "preflight_required": true,
    "postflight_required": true,
    "model_routing_required": true,
    "evidence_caching_enabled": true
  },
  "model_routing": {
    "default_model": "sonnet",
    "task_specific": {
      "opportunity_discovery": "haiku",
      "competitive_analysis": "sonnet",
      "deep_research": "sonnet",
      "oss_analysis": "sonnet",
      "multi_llm_evaluation": "sonnet",
      "assumption_testing": "sonnet",
      "poc_implementation": "sonnet",
      "decision_synthesis": "opus"
    },
    "fallback_chain": ["haiku", "sonnet", "opus"]
  },
  "evidence_policy": {
    "deep_research_cache_hours": 168,
    "competitive_tracker_cache_hours": 720,
    "oss_analysis_cache_hours": 720,
    "poc_results_cache_hours": 0,
    "note": "Deep Research 結果は7日間キャッシュ。競合/OSS 分析は30日。PoCは常にfresh。"
  },
  "public_api": {
    "direct_invocable": true,
    "trigger_keywords": [
      "リサーチ",
      "調査",
      "妥当性",
      "feasibility",
      "research",
      "discovery",
      "フルスクラッチ",
      "ゼロベース",
      "ゼロから"
    ],
    "args_pattern": "[--tier <S|M|L|XL>] [--phase <1|2|3|4|5>] [--skip-gate1] [--poc] <機能説明または機能ID>"
  },
  "dependencies": {
    "required": [],
    "optional": [
      "competitive-tracker",
      "deep-research",
      "oss-analyzer",
      "app-review-analyzer",
      "priority-analyzer"
    ]
  },
  "called_by": ["feature-pilot"],
  "calls": [
    "competitive-tracker",
    "deep-research",
    "app-review-analyzer",
    "oss-analyzer",
    "priority-analyzer",
    "feature-architect"
  ],
  "outputs": [
    {
      "type": "file",
      "path_pattern": "docs/features/<id>-<name>/RESEARCH.md",
      "description": "リサーチ要約文書 (Research Summary)"
    },
    {
      "type": "json_section",
      "path_pattern": "docs/features/<id>-<name>/CONTEXT.json",
      "json_path": "research",
      "description": "CONTEXT.jsonのresearchセクション自動生成"
    }
  ],
  "state_transitions": {
    "context_json_field": "quick_resume.current_state",
    "valid_transitions": [
      { "from": "Idle", "to": "Researching" },
      { "from": "Researching", "to": "Briefing" },
      { "from": "Researching", "to": "Idle" }
    ]
  },
  "ssot_files": ["docs/features/*/RESEARCH.md", "docs/features/*/CONTEXT.json"],
  "frameworks": {
    "primary": "Opportunity Solution Tree (Teresa Torres)",
    "secondary": ["Double Diamond (Design Council)", "Shape Up Appetite (Basecamp)"],
    "references": [
      "https://www.producttalk.org/opportunity-solution-trees/",
      "https://basecamp.com/shapeup",
      "https://www.productboard.com/blog/double-diamond-framework-product-management/"
    ]
  },
  "changelog": [
    {
      "version": "1.0.0",
      "date": "2026-02-09",
      "changes": "初期生成 - OST + Double Diamond + Shape Up Hybrid Framework"
    }
  ]
}
